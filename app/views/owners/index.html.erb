

<h2 class="card-title text-center mb-4 mt-2"> Retrouvez ici l'ensemble de vos propriétaires :</h2>


<div class="col-lg-12" style="margin-top: 50px";>
<div class="card" style="width: 60rem; filter: drop-shadow(0 0 0.15rem grey); margin-right:auto; margin-left:auto;">
<div class="card-body">
<div class="active-member">
<div class="table-responsive">
<table class="table table-xs mb-0">

  <thead>
      <tr>
          <th>Nom</th>
          <th>Prénom</th>
          <th>Email</th>
          <th>Téléphone</th>
          <th></th>
          <th></th>
      </tr>
  </thead>
  <tbody>
  <% @owners.each do |owner| %>
    <% if owner.building.id == params[:building_id].to_i %>
      <tr>
          <td><%= owner.first_name %></td>
          <td><%= owner.last_name %></td>
          <td>
              <span><%= owner.email %></span>
          </td>
          <td>
          <%= owner.phone_number %>
          </td>
          <td><%= button_to "Supprimer", agency_building_owner_path(params[:agency_id], params[:building_id], owner.id), method: :delete, class:"btn btn-danger p-2 shadow rounded-pill" %></td>
      </tr>
      
      <% end %>
      <% end %>
  </tbody>
</table>
</div>
</div>
</div>
</div>
</div>