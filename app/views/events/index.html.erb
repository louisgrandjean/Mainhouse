<div class="mr-3" style="float: right;">
<%= link_to "Créer un Evenement",  new_agency_building_event_path, method: :get, class:"btn bt-theme  p-2 shadow rounded-pill"%>                                    
</div>

<div class="card margin-top" style=" filter: drop-shadow(0 0 0.15rem grey); margin-right:25%; margin-left: 25%;">
<div class="card-body">
<% cnt = 0 %>
<% @events.each do |event| %>
	<% if event.building_id == params[:building_id].to_i %> 
	<div class="card " style=" filter: drop-shadow(0 0 0.06rem grey); margin-right:5%; margin-left: 5%;">
	<div class="card-body">
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><%= event.title %></li>
          <li class="list-group-item">Description : <%= event.description %></li> 
					<li class="list-group-item">Début de lévénement : <%= event.datetime %></li>
          <li class="list-group-item">Durée en minutes : <%= event.duration %></li> 
					<li class="list-group-item">Modifié le : Créé le : <%= event.created_at%>, Modifié le : <%= event.updated_at %></li> 
        </ul>
				<%=link_to "Modifier cet événement", edit_agency_building_event_path(params[:agency_id], params[:building_id], event.id), class: "btn mb-1 bt-theme mt-3 mr-1"%>
				<%= link_to "Supprimer", agency_building_event_path(params[:agency_id], params[:building_id], event.id), :confirm => "Etes vous sur de supprimer cet événement ?", method: :delete, class:"btn mb-1 btn-danger mt-3" %> 
        </div>
				</div>  
			<% cnt+=1 %>
				<% end %>
  <% end %>
	<% if cnt == 0%>
	<div class= text-center>
	<h1> Aucun événement est prévu ! </h1>
	</div>
	<% end %>
</div>
</div>
