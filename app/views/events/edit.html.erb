
<body>
<div class="login-form-bg h-100">
	<div class="container h-100">
		<div class="row justify-content-center h-100">
			<div class="col-xl-6">
				<div class="form-input-content">
					<div class="card login-form mb-0">
						<div class="card-body pt-5">
							<a class="text-center" href="index.html"> <h4>Créer un événement</h4></a>
								<div class="form-group container" style="width: 30rem;">
								<%= form_tag agency_building_event_path, method: "put" do %>
									<% text_field_tag 'building_id', params[:building_id] %>
									<div class="form-group">
										<%= label_tag "Début de l'événement" %>
										<p><small>Format : JJ-MM-AAAA  hh:mm:ss</small></p>
										<div class="form-group">
												<input type="datetime-local" id="meeting-time"
												name="datetime" value=""
												 min="2021-01-01T00:00" max="2500-06-14T00:00">
												 <%= params["datetime"] %>
											 </div>
									 </div>
									<div class="form-group">
										 <%= label_tag 'Durée (en minutes)' %>
										 <div class="form-group">
											<input type="number" name="duration">
											<% params["duration"] %>
										</div>
									</div>
										<div class="form-group">
											<%= label_tag 'Titre' %>
											<%= text_field_tag 'title', @event.title, class: "form-control mb-2" %>
									</div>
									<div class="form-group">
										<%= label_tag 'Description' %>
										<%= text_area_tag 'description', @event.description, class: "form-control mb-2" %>
									</div>
									<%= submit_tag "Terminer", class: "form-control btn bt-theme" %>
								<% end %>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
</body>