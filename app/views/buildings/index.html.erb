<div class="container">

  <div class="row">
  
    <% @buildings.each do |building| %>
      <% if building.agency.id == params[:agency_id].to_i%> 
        <div class="col-md-4 margin-top">
          <div class="card text-center ml-5" style="width: 18rem;">
            <img class="card-img-top" src=<%= building.picture%> alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title"><%= building.name%></h5>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><%= building.adress%></li>
              <li class="list-group-item">Id de l'immeuble : <%= building.id %></li> 
            </ul>
              <div class="card-body">
                <%= link_to "Afficher cet immeuble",  agency_building_path(params[:agency_id], building.id), method: :get, class:"btn bt-theme  p-2 shadow rounded-pill"%>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
</div>




